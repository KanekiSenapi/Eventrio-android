<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#333c5a</item>
    </style>

    <style name="EnterExitEventDetails">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="button_test">
        <item name="android:textColor">#fffef3</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="text_details">
        <item name="android:textColor">#949494</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="tagigosz">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#a8b3d0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="formEditText">
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
