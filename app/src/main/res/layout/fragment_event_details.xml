<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EventDetailsFragment">

    <RelativeLayout
        android:id="@+id/toBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
/>


            <RelativeLayout
                android:id="@+id/containerForSwipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/eventImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/powered_by_google_light"
                    android:visibility="gone"
                    android:clickable="true"/>

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/details"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.3"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/shape_details"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:paddingTop="32dp"
                        android:paddingBottom="32dp"
                        android:weightSum="100"
                        android:clickable="true">

                        <LinearLayout
                            android:id="@+id/minData"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="100"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/eventName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/source_sans_pro_bold"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight=".1"
                                    android:padding="2dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/time" />

                                <TextView
                                    android:id="@+id/eventTime"
                                    style="@style/text_details"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight=".9" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight=".1"
                                    android:padding="2dp"
                                    android:src="@drawable/location" />

                                <TextView
                                    android:id="@+id/eventAddress"
                                    style="@style/text_details"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight=".9" />
                            </LinearLayout>

                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/containerTags"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                </LinearLayout>
                            </HorizontalScrollView>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/detailsmax"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.0"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/shape_detailsmax"
                        android:orientation="vertical"
                        android:paddingLeft="18dp"
                        android:paddingTop="0dp"
                        android:paddingRight="18dp"
                        android:paddingBottom="32dp"
                        android:weightSum="100"
                        android:clickable="true"
                        >

                        <ImageView
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:paddingBottom="18dp"
                            android:background="@color/smth" />

                        <android.support.v4.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="9dp"
                                    android:fontFamily="@font/source_sans_pro_bold"
                                    android:text="Description"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/eventDescription"
                                    style="@style/text_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="9dp"
                                    android:fontFamily="@font/source_sans_pro_bold"
                                    android:text="Organizer"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/eventOrganizer"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="12dp"
                                    android:fontFamily="@font/source_sans_pro_bold"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="9dp"
                                    android:fontFamily="@font/source_sans_pro_bold"
                                    android:text="Comments"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycleComments"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>


                        </android.support.v4.widget.NestedScrollView>


                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

    </RelativeLayout>

</FrameLayout>